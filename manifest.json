{
  "manifest_version": 3,
  "name": "__MSG_extName__",
  "description": "__MSG_extDesc__",
  "version": "0.1.2",
  "default_locale": "en",
  "icons": {
    "16": "icons/16x16.png",
    "48": "icons/48x48.png",
    "128": "icons/128x128.png"
  },
  "permissions": ["storage"],
  "host_permissions": [
    "https://api.github.com/*",
    "https://github.com/*"
  ],
  "background": {
    "service_worker": "src/background.js"
  },
  "options_ui": {
    "page": "popup/index.html",
    "open_in_tab": false
  },
  "action": {
    "default_popup": "popup/index.html",
    "default_icon": {
      "48": "icons/48x48.png"
    }
  },
  "web_accessible_resources": [
    {
      "resources": [
        "src/utils/follow/*.js",
        "src/utils/follow/*.js",
        "src/utils/autocomplete/*.js",
        "src/utils/autocomplete/*/*.js"
      ],
      "matches": ["https://github.com/*"]
    }
  ],
  "content_scripts": [
    {
      "matches": ["https://github.com/*"],
      "js": ["src/content.js"],
      "css": ["src/style.css"],
      "run_at": "document_idle"
    }
  ]
}
